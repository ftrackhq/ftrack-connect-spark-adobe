<?xml version="1.0"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  ExtensionBundleId="com.ftrack.connect.adobe"
  ExtensionBundleVersion="VERSION" Version="5.0">
    <Author><![CDATA[ftrack]]></Author>
  <ExtensionList>
    <Extension Id="com.ftrack.connect.adobe.panel" Version="VERSION" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
        <Host Name="AEFT" Version="13.0"/>
        <Host Name="AICY" Version="11.0"/>
        <Host Name="DRWV" Version="15.0"/>
        <Host Name="FLPR" Version="15.0"/>
        <Host Name="IDSN" Version="11.0"/>
        <Host Name="ILST" Version="19.0"/>
        <Host Name="PHSP" Version="16.0"/>
        <Host Name="PHXS" Version="16.0"/>
        <Host Name="PPRO" Version="9.0"/>
        <Host Name="PRLD" Version="4.0"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="6.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.ftrack.connect.adobe.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./ftrack_connect_adobe/index.html</MainPath>
          <ScriptPath>./ftrack_connect_adobe/index.jsx</ScriptPath>
            <CEFCommandLine>
                <Parameter>--enable-nodejs</Parameter>
            </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>ftrack</Menu>
            <Geometry>
                <Size>
                    <Height>640</Height>
                    <Width>480</Width>
                </Size>
                <MaxSize>
                    <Height>1280</Height>
                    <Width>960</Width>
                </MaxSize>
                <MinSize>
                    <Height>375</Height>
                    <Width>375</Width>
                </MinSize>
            </Geometry>
          <Icons>
            <Icon Type="Normal">./client/image/icon/icon_light.png</Icon>
            <Icon Type="RollOver">./client/image/icon/icon_light_hover.png</Icon>
            <Icon Type="Disabled">./client/image/icon/icon_light_disabled.png</Icon>
            <Icon Type="DarkNormal">./client/image/icon/icon_dark.png</Icon>
            <Icon Type="DarkRollOver">./client/image/icon/icon_dark_hover.png</Icon>
            <Icon Type="DarkDisabled">./client/image/icon/icon_dark_disabled.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>